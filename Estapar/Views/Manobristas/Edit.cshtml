@model Estapar.Models.Manobrista

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Manobrista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="num_cpf" class="control-label"></label>
                <input asp-for="num_cpf" class="form-control" />
                <span asp-validation-for="num_cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nom_manobrista" class="control-label"></label>
                <input asp-for="nom_manobrista" class="form-control" />
                <span asp-validation-for="nom_manobrista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dat_nascimento" class="control-label"></label>
                <input asp-for="dat_nascimento" class="form-control" />
                <span asp-validation-for="dat_nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
