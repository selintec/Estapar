@model Estapar.Models.Carro

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Carro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="nom_marca" class="control-label"></label>
                <input asp-for="nom_marca" class="form-control" />
                <span asp-validation-for="nom_marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nom_modelo" class="control-label"></label>
                <input asp-for="nom_modelo" class="form-control" />
                <span asp-validation-for="nom_modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="num_placa" class="control-label"></label>
                <input asp-for="num_placa" class="form-control" />
                <span asp-validation-for="num_placa" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
